{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "mix_task",
      "name": "Phoenix Server",
      "task": "phx.server",
      "request": "launch",
      "projectDir": "${workspaceRoot}",
      "debugAutoInterpretAllModules": false,
      "excludeModules": ["Bcrypt.Base"],
      "env": {
        "MIX_ENV": "dev"
      }
    },
    {
      "type": "mix_task",
      "name": "mix test",
      "request": "launch",
      "task": "test",
      "taskArgs": [
        "--trace"
      ],
      "startApps": true,
      "projectDir": "${workspaceRoot}",
      "requireFiles": [
        "test/**/test_helper.exs",
        "test/**/*_test.exs"
      ]
    }
  ]
}